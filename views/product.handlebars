
{{> header}}
<h1>{{title}}</h1>
<p>Enjoy Our Variety Of Kombucha Cocktails!</p>

{{#each products as |product|}}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{product.title}}</h3>
          <p class="description">{{{product.description}}}</p>
          <div class="clearfix">
            <div class="price pull-left"><i
                class="fa fa-tag"
                aria-hidden="true"
              ></i>
              {{product.price}}
              USD</div>
            <a
              href="/add/{{product.id}}"
              class="btn btn-default pull-right"
              role="button"
            ><i class="fa fa-shopping-cart" aria-hidden="true"></i>Add To Cart</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}